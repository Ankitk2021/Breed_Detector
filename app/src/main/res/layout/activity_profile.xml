<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:background="@color/white"  >

    <!-- Top centered avatar -->
<FrameLayout
android:id="@+id/avatar_container"
android:layout_width="120dp"
android:layout_height="120dp"
android:layout_marginTop="28dp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<!-- outer subtle shadow / bottom shape (oval) -->
<View
    android:id="@+id/avatar_base"
    android:layout_width="100dp"
    android:layout_height="56dp"
    android:layout_gravity="center_horizontal|bottom"
    android:translationY="10dp"
    android:background="@drawable/oval_base_gray" />

<!-- circular icon (head) -->
<ImageView
    android:id="@+id/avatar_circle"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_gravity="top|center_horizontal"
    android:background="@drawable/oval_base_gray"
    android:contentDescription="Avatar"
    android:scaleType="centerCrop"
    android:clipToPadding="true"
    android:adjustViewBounds="true"

    android:padding="6dp" />

</FrameLayout>

    <!-- Big name text (centered under avatar) -->
<TextView
android:id="@+id/tv_name_big"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginTop="18dp"
android:text="Himanshu Yadav"
android:textSize="34sp"
android:textStyle="bold"
android:fontFamily="sans-serif-black"
android:textColor="#3D3D46"
android:gravity="center"
app:layout_constraintTop_toBottomOf="@id/avatar_container"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Container for profile fields -->
<LinearLayout
android:id="@+id/fields_container"
android:orientation="vertical"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginTop="28dp"
android:paddingStart="24dp"
android:paddingEnd="24dp"
app:layout_constraintTop_toBottomOf="@id/tv_name_big"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<!-- Field row template -->
<LinearLayout
    android:id="@+id/row_name"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@drawable/rounded_white_card"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/icon_name"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/profile"
        android:contentDescription="name icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="12sp"
            android:textColor="#7B7B88"/>

        <TextView
            android:id="@+id/value_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Himanshu Yadav"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E2E36"/>
    </LinearLayout>

</LinearLayout>

<!-- Mobile -->
<LinearLayout
    android:id="@+id/row_mobile"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@drawable/rounded_white_card"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/icon_mobile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/phone"
        android:contentDescription="phone icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/label_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textSize="12sp"
            android:textColor="#7B7B88"/>

        <TextView
            android:id="@+id/value_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 XXXX 43210"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E2E36"/>
    </LinearLayout>

</LinearLayout>

<!-- Aadhar -->
<LinearLayout
    android:id="@+id/row_adhar"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@drawable/rounded_white_card"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/icon_adhar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/adhar"
        android:contentDescription="aadhar icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/label_adhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadhar"
            android:textSize="12sp"
            android:textColor="#7B7B88"/>

        <TextView
            android:id="@+id/value_adhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXX-XXXX-1234"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E2E36"/>
    </LinearLayout>

</LinearLayout>

<!-- Divider -->
<View
    android:layout_width="match_parent"
    android:layout_height="12dp"
    android:background="@android:color/transparent" />

<!-- Settings row (with arrow) -->
<LinearLayout
    android:id="@+id/row_settings"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="6dp"
    android:paddingEnd="6dp">

    <ImageView
        android:id="@+id/icon_settings"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/setting"
        android:contentDescription="settings icon" />

    <TextView
        android:id="@+id/label_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="16sp"
        android:textColor="#2E2E36"
        android:layout_weight="1"
        android:paddingStart="12dp"/>

    <ImageView
        android:id="@+id/arrow_settings"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/right"
        android:contentDescription="go" />
</LinearLayout>

<!-- Help row -->
<LinearLayout
    android:id="@+id/row_help"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="6dp"
    android:paddingEnd="6dp">

    <ImageView
        android:id="@+id/icon_help"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/help"
        android:contentDescription="help icon" />

    <TextView
        android:id="@+id/label_help"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textSize="16sp"
        android:textColor="#2E2E36"
        android:layout_weight="1"
        android:paddingStart="12dp"/>

    <ImageView
        android:id="@+id/arrow_help"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/right"
        android:contentDescription="go" />
</LinearLayout>

</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
